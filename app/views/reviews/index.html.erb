<div class="jumbotron" id="script_container">
<iframe src="/pdfjs/web/viewer.html?file=script.pdf" style="border: 0" width="100%" height="550px" min-height="360px" frameborder="0" scrolling="no"></iframe>
</div>

<h1>コメント一覧</h1>

<%= link_to 'コメントを投稿する', new_review_path %>

<br>
<hr>

<% @reviews.each do |review| %>
  <h4><b><%= review.nickname %></b></h4>
  <%= review.comment %>
  <br>
  <%= link_to 'このコメントに返信する', new_review_reply_path(review_id: review.id) %>
    <% review.replies.each do |reply| %>
      <h4><b><%= reply.nickname %></b></h4>
      <%= reply.comment %>
    <% end %>
  <hr>
<% end %>