<h4 style="margin-top: 60px;"><b>返信先のコメント</b></h4>
<div class="panel panel-default">
  <div class="panel-heading">
    <i class="glyphicon glyphicon-user"></i><b><%= @review.nickname %></b>
  </div>
  <div class="panel-body">
    <%= @review.comment %>
  </div>
</div>
<br><br>

<h4><b>返信コメントを書く</b></h4>
<%= form_for [@review, @reply] do |f| %>
  <%= f.label :ニックネーム %>
  <br>
  <%= f.text_field :nickname, placeholder: "ニックネームを記入" %>
  <br>
  <%= f.label :コメント %>
  <br>
  <%= f.text_area :comment, placeholder: "コメントを記入", :size => '60x10' %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>

<%= link_to '戻る', reviews_path %>